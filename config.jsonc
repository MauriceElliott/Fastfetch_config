     "logo": {
         "type":"kitty",
         "padding": {
             "top": 1,
             "left": 1,
             "right": 2
         },
         "width": 25,
         "height":19,
         "source": "~/.config/fastfetch/img/2b_4.png"
     },

   "display": {
        "separator": ""
    },
    "modules": [
        {
          "key": "╭───────────╮",
          "type": "custom",
          "keyColor": "white"
        },
        {
            // draw borders first to make colors of left and right border consistant
            "key": "│{#31}  user    {#white}│ ",
            "type": "title",
            "format": "{user-name}",
            "keyColor": "white"
        },
        {
            "key": "│{#32} 󰇅 host    {#white}│ ",
            "type": "title",
            "format": "{host-name}",
            "keyColor": "white"

        },
        {
            "key": "│{#33} 󰅐 uptime  {#white}│ ",
            "type": "uptime",
            "keyColor": "white",
            "format": "{1} days {2} hours {3} mins"
        },
        {
            "key": "│{#34} {icon} distro  {#white}│ ",
            "type": "os",
            "keyColor": "white",
            "format": "{name} {codename}"
        },
        {
            "key": "│{#35}  kernel  {#white}│ ",
            "type": "kernel",
            "keyColor": "white",
            "format": "{sysname}"
        },
        {
            "key": "│{#36} 󰇄 display {#white}│ ",
            "type": "display",
            "keyColor": "white",
            "format": "{width}x{height} @ {refresh-rate} Hz"
        },
        {
            "key": "│{#31}  terminal{#white}│ ",
            "type": "terminal",
            "keyColor": "white",
            "format": "{pretty-name}"
        },
        {
            "key": "│{#32}  shell   {#white}│ ",
            "type": "shell",
            "keyColor": "white",
            "format": "{pretty-name}"
        },
        {
            "key": "│{#33} 󰍛 cpu     {#white}│ ",
            "type": "cpu",
            "keyColor": "white",
            "format": "{name}"
        },
        {
            "key": "│{#34} 󰉉 disk    {#white}│ ",
            "type": "disk",
            "folders": "/",
            "keyColor": "white",
            "format": "{1} / {2} ({3})"
        },
        {
            "key": "│{#35} 󰍛 memory  {#white}│ ",
            "type": "memory",
            "keyColor": "white"
        },
        {
          "key": "├───────────┤",
          "type": "custom",
          "keyColor": "white"
        },
        {
            "key": "│{#39} 󰏘 colors  {#white}│ ",
            "type": "colors",
            "symbol": "square",
            "keyColor": "white"
        },
        {
            "key": "╰───────────╯",
            "type": "custom",
            "keyColor": "white"
        }
    ]
}
